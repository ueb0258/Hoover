@model IEnumerable<Hoover.Models.DailyFuelLog>

@{
    ViewBag.Title = "Report";
}

<h2>Daily Fuel Log Report - @ViewBag.eqName</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MeterReading)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fuel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EngineOil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GearOil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HydrolicOil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RepairNotes)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date.Month)/
            @Html.DisplayFor(modelItem => item.Date.Day)/
            @Html.DisplayFor(modelItem => item.Date.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MeterReading)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fuel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EngineOil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GearOil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HydrolicOil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RepairNotes)
        </td>
    </tr>
}

</table>

<p>@ViewBag.noLogs</p>